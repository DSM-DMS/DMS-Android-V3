<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
                name="applyExtensionStudyViewModel"
                type="dsm.android.v3.presentation.viewModel.applyExtensionStudy.ApplyExtensionStudyViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:onClick="@{()->applyExtensionStudyViewModel.applyExtensionStudyClickBack()}"
                android:id="@+id/applyExtension_close_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_close_gray_24dp"
                android:background="@drawable/radius_close_gray"/>

        <ImageView
                app:srcCompat="@drawable/ic_logo"
                android:id="@+id/applyExtension_logo_imgv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                    android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickTime(view, 12)}"
                    android:background="@drawable/radius_grayline_view"
                    android:id="@+id/applyExtension_twelve_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/apply_extension_study_twelve_text"
                    android:fontFamily="@font/nanumsquarebold"
                    android:textSize="@dimen/typo_body2"
                    android:textColor="@color/colorGray400"
                    app:layout_constraintTop_toBottomOf="@id/applyExtension_close_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="16dp"/>

        <HorizontalScrollView
                android:id="@+id/applyExtension_location_scrv"
                app:layout_constraintTop_toBottomOf="@id/applyExtension_twelve_tv"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view ,1)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_gaonsil_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_gaonsil_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 2)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_naonsil_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_naonsil_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 3)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_daonsil_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_daonsil_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 4)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_raonsil_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_raonsil_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 5)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_second_floor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_second_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 6)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_third_floor_school_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_third_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 7)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_third_floor_dormitory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_third_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 8)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_fourth_floor_school_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_fourth_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 9)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_fourth_floor_dormitory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_fourth_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 10)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_fifth_floor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_fifth_floor_text"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickClass(view, 11)}"
                        android:background="@drawable/radius_grayline_view"
                        android:id="@+id/applyExtension_third_floor_sofa_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/apply_extension_study_third_floor_sofa"
                        android:textSize="@dimen/typo_body2"
                        android:fontFamily="@font/nanumsquarebold"
                        android:textColor="@color/colorGray400"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>

        </HorizontalScrollView>

        <android.support.constraint.ConstraintLayout
                android:background="@drawable/radius_dialog_white"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/applyExtension_location_scrv"
                app:layout_constraintBottom_toTopOf="@id/applyExtension_cancel_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp">
            <ScrollView
                    app:layout_constraintTop_toTopOf="@+id/applyExtension_board_tv"
                    app:layout_constraintStart_toEndOf="@+id/applyExtension_window_tv"
                    app:layout_constraintEnd_toStartOf="@+id/applyExtension_hallway_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:id="@+id/applyExtension_map_lay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </HorizontalScrollView>
            </ScrollView>
            <TextView
                    android:id="@+id/applyExtension_board_tv"
                    android:fontFamily="@font/nanumsquarebold"
                    android:textSize="@dimen/typo_body1"
                    android:textColor="@color/colorPrimary300"
                    android:text="@{applyExtensionStudyViewModel.topLocation}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/applyExtension_window_tv"
                    android:fontFamily="@font/nanumsquarebold"
                    android:textSize="@dimen/typo_body1"
                    android:textColor="@color/colorPrimary300"
                    android:text="@{applyExtensionStudyViewModel.leftLocation}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:rotation="270"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/applyExtension_hallway_tv"
                    android:fontFamily="@font/nanumsquarebold"
                    android:textSize="@dimen/typo_body1"
                    android:textColor="@color/colorPrimary300"
                    android:text="@{applyExtensionStudyViewModel.rightLocation}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:rotation="90"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>

        <Button
                android:id="@+id/applyExtension_cancel_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/applyExtension_apply_btn"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@drawable/radius_view_gray"
                android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickCancel(view)}"
                android:gravity="center"
                android:textSize="@dimen/typo_header"
                android:fontFamily="@font/nanumsquareregular"
                android:textColor="@color/colorWhite"
                android:text="@string/apply_extension_study_cancel_btn"/>
        <Button
                android:id="@+id/applyExtension_apply_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/applyExtension_cancel_btn"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_view_primary"
                android:paddingVertical="15dp"
                android:onClick="@{(view)->applyExtensionStudyViewModel.applyExtensionStudyClickApply(view)}"
                android:gravity="center"
                android:textSize="@dimen/typo_header"
                android:fontFamily="@font/nanumsquareregular"
                android:textColor="@color/colorWhite"
                android:text="@string/apply_extension_study_apply_btn"/>
    </android.support.constraint.ConstraintLayout>
</layout>