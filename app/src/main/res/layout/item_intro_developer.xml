<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Api17CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_horizontal"
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_top_radius_16">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/introDeveloperItem_image_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/taeyoung"
                android:scaleType="centerCrop"
                android:background="@drawable/back_top_radius_16"
                app:riv_corner_radius_top_right="16dp"
                app:riv_corner_radius_top_left="16dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/introDeveloperItem_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorGray700"
                tools:text="조우진"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/introDeveloperItem_image_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/introDeveloperItem_career_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                tools:text="안드로이드 개발자"
                android:textColor="@color/colorGray200"
                app:layout_constraintStart_toStartOf="@+id/introDeveloperItem_name_tv"
                app:layout_constraintEnd_toEndOf="@+id/introDeveloperItem_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/introDeveloperItem_name_tv"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Api17CardView>