<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <dsm.android.v3.ui.customView.CustomCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/notice_list_customview"
            app:title="@string/notice_rules_title"
            app:description="@string/notice_rules_description"
            app:count="1"
            app:button="@drawable/ic_close_white_24dp"
            app:backgroundColor="@color/colorPrimary"
            app:titleColor="@color/colorWhite"
            app:descriptionColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/notice_list_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/notice_list_customview"
            />

</android.support.constraint.ConstraintLayout>