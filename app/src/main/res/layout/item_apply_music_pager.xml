<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="applyPagerModel"
                type="dsm.android.v3.model.ApplyPagerModel"/>

        <variable
                name="applyMusicViewModel"
                type="dsm.android.v3.ui.applyMusic.ApplyMusicViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.Api17CardView
                app:cardElevation="10dp"
                android:shadowColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_applyGoing_card"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/item_applyGoing_title_tv"
                        android:text="@{applyPagerModel.week}"
                        android:textSize="@dimen/text_size_24"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item_applyGoing_explanation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquareregular"
                        android:textSize="@dimen/typo_subtitle"
                        android:textColor="@color/colorGray600"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="10sp"
                        android:text="@{applyPagerModel.description}"
                        android:layout_marginTop="20dp"/>
            </LinearLayout>
        </android.support.v7.widget.Api17CardView>

        <TextView
                android:id="@+id/item_applyGoing_count_tv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:fontFamily="@font/nanumsquareextrabold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18"
                android:text="@{String.valueOf(applyPagerModel.cnt)}"
                android:background="@drawable/radius_circle_primary"
                app:layout_constraintEnd_toEndOf="@id/item_applyGoing_card"
                app:layout_constraintTop_toTopOf="@id/item_applyGoing_card"/>
    </android.support.constraint.ConstraintLayout>
</layout>
