<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Api17CardView
        android:id="@+id/mealItem_breakfast_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:cardBackgroundColor="@color/colorCustomCardView"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/mealItem_lunch_cv"
        app:layout_constraintEnd_toStartOf="@+id/itemMeal_right_guideline"
        app:layout_constraintHeight_max="164dp"
        app:layout_constraintHeight_min="140dp"
        app:layout_constraintStart_toStartOf="@+id/itemMeal_left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mealItem_breakfast_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquarebold"
                android:text="아침"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mealItem_breakfast_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumsquareregular"
                android:textColor="@color/colorGray700"
                android:textSize="@dimen/typo_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mealItem_breakfast_header_tv"
                app:layout_constraintTop_toBottomOf="@+id/mealItem_breakfast_header_tv"
                tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이, 수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>

    <android.support.v7.widget.Api17CardView
        android:id="@+id/mealItem_lunch_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:cardBackgroundColor="@color/colorCustomCardView"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/mealItem_dinner_cv"
        app:layout_constraintEnd_toStartOf="@+id/itemMeal_right_guideline"
        app:layout_constraintHeight_max="164dp"
        app:layout_constraintHeight_min="140dp"
        app:layout_constraintStart_toStartOf="@+id/itemMeal_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/mealItem_breakfast_cv">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mealItem_lunch_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquarebold"
                android:text="점심"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/typo_header"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mealItem_lunch_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumsquareregular"
                android:textColor="@color/colorGray700"
                android:textSize="@dimen/typo_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mealItem_lunch_header_tv"
                app:layout_constraintTop_toBottomOf="@+id/mealItem_lunch_header_tv"
                tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>

    <android.support.v7.widget.Api17CardView
        android:id="@+id/mealItem_dinner_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:cardBackgroundColor="@color/colorCustomCardView"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemMeal_right_guideline"
        app:layout_constraintHeight_max="164dp"
        app:layout_constraintHeight_min="140dp"
        app:layout_constraintStart_toStartOf="@+id/itemMeal_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/mealItem_lunch_cv">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mealItem_dinner_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumsquarebold"
                android:text="저녁"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/typo_header"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mealItem_dinner_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumsquareregular"
                android:textColor="@color/colorGray700"
                android:textSize="@dimen/typo_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mealItem_dinner_header_tv"
                app:layout_constraintTop_toBottomOf="@+id/mealItem_dinner_header_tv"
                tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>

    <android.support.constraint.Guideline
        android:id="@+id/itemMeal_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/itemMeal_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />
</android.support.constraint.ConstraintLayout>