<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Api17CardView
            android:id="@+id/mealItem_breakfast_cv"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mealItem_lunch_cv"
            app:layout_constraintVertical_chainStyle="spread">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/mealItem_breakfast_header_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아침"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/typo_header"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/mealItem_breakfast_content_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typo_subtitle"
                    android:lineSpacingExtra="4sp"
                    tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이"
                    app:layout_constraintTop_toBottomOf="@+id/mealItem_breakfast_header_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="@+id/mealItem_breakfast_header_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>

    <android.support.v7.widget.Api17CardView
            android:id="@+id/mealItem_lunch_cv"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/mealItem_breakfast_cv"
            app:layout_constraintBottom_toTopOf="@+id/mealItem_dinner_cv">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/mealItem_lunch_header_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점심"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/typo_header"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/mealItem_lunch_content_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4sp"
                    android:textSize="@dimen/typo_subtitle"
                    android:layout_marginEnd="16dp"
                    tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이"
                    app:layout_constraintStart_toStartOf="@+id/mealItem_lunch_header_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mealItem_lunch_header_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>

    <android.support.v7.widget.Api17CardView
            android:id="@+id/mealItem_dinner_cv"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/mealItem_lunch_cv"
            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/mealItem_dinner_header_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저녁"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/typo_header"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/mealItem_dinner_content_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/typo_subtitle"
                    android:lineSpacingExtra="4sp"
                    android:layout_marginEnd="16dp"
                    tools:text="수수밥, 맑은무채국, 비엔나푸실리볶음, 조기구이, 사과, 배추겉절이"
                    app:layout_constraintStart_toStartOf="@+id/mealItem_dinner_header_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mealItem_dinner_header_tv"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Api17CardView>
</android.support.constraint.ConstraintLayout>