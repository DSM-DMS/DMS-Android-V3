<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="vm"
                  type="dsm.android.v3.ui.register.RegisterViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <ImageView
                android:id="@+id/register_appLogo_img"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginTop="36dp"
                android:layout_marginStart="46dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/signin_main_icon" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/register_btn"
                app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:id="@+id/register_DMS_for_Android_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="45dp"
                android:text="DMS for Android"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/register_appLogo_img"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:id="@+id/register_what_is_DMS_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dormitory Management System"
                android:textSize="10sp"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/register_DMS_for_Android_tv"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/register_DMS_for_Android_tv"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="4dp"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/register_constraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_layout_half_round"
                android:layout_marginTop="180dp"
                app:layout_constraintTop_toBottomOf="@+id/register_what_is_DMS_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:id="@+id/register_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인코드 입력"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="46dp"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>

            <EditText android:layout_width="0dp"
                      android:layout_height="50dp"
                      android:id="@+id/register_code_et"
                      app:layout_constraintTop_toBottomOf="@+id/register_code_tv"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="46dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="46dp"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                      android:layout_marginTop="10dp" android:hint="확인코드를 입력해주세요"
                      android:text="@={vm.registerConfirmCode}"
                      android:textColor="#000000"
                      android:textColorHint="@color/colorTextHint"
                      android:textSize="14sp"/>
            <TextView
                    android:id="@+id/register_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/register_code_et" android:layout_marginEnd="46dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="46dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginTop="24dp"/>

            <EditText android:layout_width="0dp" android:layout_height="50dp" android:id="@+id/register_id_et"
                      app:layout_constraintTop_toBottomOf="@+id/register_id_tv"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="46dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="46dp"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                      android:layout_marginTop="10dp" android:hint="아이디를 입력해주세요"
                      android:textColor="#000000"
                      android:text="@={vm.registerId}"
                      android:textColorHint="@color/colorTextHint"
                      android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="비밀번호"
                      android:textSize="16sp" app:layout_constraintTop_toBottomOf="@+id/register_id_et"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                      app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="46dp"
                      android:id="@+id/register_pw_tv"/>

            <EditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="비밀번호를 입력해주세요"
                    android:text="@={vm.registerPw}"
                    android:textColorHint="@color/colorTextHint"
                    app:layout_constraintTop_toBottomOf="@+id/register_pw_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                    app:layout_constraintVertical_bias="0.0" android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    android:textSize="14sp" android:id="@+id/register_pw_et"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="비밀번호 재입력"
                      android:id="@+id/register_pw_again_tv"
                      android:textSize="16sp" app:layout_constraintTop_toBottomOf="@+id/register_pw_et"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginStart="46dp" android:layout_marginTop="24dp"
                      app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>

            <EditText
                    android:inputType="textPassword" android:layout_width="0dp" android:layout_height="50dp"
                    android:id="@+id/register_pw_again_et"
                    app:layout_constraintTop_toBottomOf="@+id/register_pw_again_tv"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="46dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="46dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="10dp" android:hint="비밀번호를 확인해주세요"
                    android:text="@={vm.registerPwComfirm}"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="14sp"/>

        </android.support.constraint.ConstraintLayout>

        <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="회원가입"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{() -> vm.inputData()}"
                android:clickable="@{vm.btnColorSet}"
                android:background="@{vm.btnColorSet == false ? @color/colorSignInBtnUnCliked : @color/colorPrimary}"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</layout>
