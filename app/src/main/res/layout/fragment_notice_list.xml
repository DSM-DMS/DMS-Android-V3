<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="vm"
                type="dsm.android.v3.presentation.viewModel.notice.NoticeViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/notice_list_constraint1">

            <android.support.v7.widget.Api17CardView
                    android:id="@+id/noticeList_category_cv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/noticeList_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@{vm.titleLiveData}"
                            android:fontFamily="@font/nanumsquareextrabold"
                            android:textColor="#FFF"
                            tools:text="자주하는 질문"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"/>

                    <TextView
                            android:id="@+id/noticeList_description_tv"
                            android:fontFamily="@font/nanumsquareregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.descriptionLiveData}"
                            android:textSize="12sp"
                            tools:text="사감부에서 게시한 공지사항을 열람합니다."
                            android:textColor="#a9e4e4"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/noticeList_title_tv"/>

                    <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/noticeList_close_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> vm.finishNoticeListCall()}"
                            android:src="@drawable/ic_close_white_24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.Api17CardView>

            <!--<dsm.android.v3.ui.customView.CustomCardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:id="@+id/notice_list_customview"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="-12dp"
                    app:title="@string/notice_rules_title"
                    app:description="@string/notice_rules_description"
                    app:count="1"
                    app:button="@drawable/ic_close_white_24dp"
                    app:backgroundColor="@color/colorPrimary"
                    app:titleColor="@color/colorWhite"
                    app:descriptionColor="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>-->


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/notice_list_rv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_notice"
                    app:noticeData="@{vm.noticeListLiveData}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/noticeList_category_cv"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/notice_description_bottomSheet"
                android:background="@drawable/style_upside_radius"
                android:elevation="12dp"
                android:backgroundTint="@color/colorWhite"
                app:layout_behavior="@string/bottom_sheet_behavior">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:id="@+id/imageView"/>

                <ImageView
                        android:id="@+id/notice_description_cancle_iv"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close_gray_24dp"
                        android:onClick="@{() -> vm.closeEventCall()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:layout_marginEnd="24dp"/>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/notice_description_title_tv"
                        android:textSize="18sp"
                        android:text="@{vm.noticeDescriptionLiveData.title}"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:lineSpacingExtra="3sp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

                <TextView
                        android:id="@+id/notice_description_content_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/colorGray800"
                        android:text="@{vm.noticeDescriptionLiveData.content}"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="4sp"
                        android:scrollbars="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/notice_description_title_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>