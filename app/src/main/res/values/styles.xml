<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MainBottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>
    <style name="SplashTheme" parent="AppTheme"><item name="background">@drawable/splash</item></style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/nanumsquareregular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
